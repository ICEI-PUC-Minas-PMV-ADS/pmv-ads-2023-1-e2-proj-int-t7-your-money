<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Your_Money</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="container justify-content-center">
                    <div class="row align-items-center">
                    <div class="col-sm">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/yourMoney.png" width="25%" /></a>
                    </div>
                    <div class="" style="text-align:center">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Dicas"><h5><b>Dicas</b></h5></a>
                    </div>
                        <div>
                            <h7 style="color:blue">|</h7>
                        </div>
                        @if (User.Identity.IsAuthenticated)
                        {
                        <div class="">
                            <a class="nav-link" asp-area="" asp-controller="Lancamentos" asp-action="Index"><h5><b>Lançamentos</b></h5></a>
                        </div>
                        <div>
                            <h7 style="color:blue">|</h7>
                        </div>
                        <div class="">
                            <a class="nav-link" asp-area="" asp-controller="Usuarios" asp-action="Index"><h5><b>Relatórios</b></h5></a>
                        </div>
                        <div>
                            <h7 style="color:blue">|</h7>
                        </div>
                        <div class="" style="text-align:center">
                            <a class="nav-link" style="justify-items:baseline" asp-area="" asp-controller="Usuarios" asp-action="Index"><h6><img src="~/userloged.png" /> Olá,@User.Identity.Name</h6></a>
                        </div>
                        <h7 style="color:blue">|</h7>
                            <div>
                            <a class="nav-link" asp-area="" asp-controller="Usuarios" asp-action="Logout"><h6><b>Sair</b></h6></a>
                            </div>
                        }
                        else
                        {
                        <div class="">
                            <a class="nav-link" asp-area="" asp-controller="Usuarios" asp-action="Create"><h5><b>Cadastrar</b></h5></a> 
                        </div>
                        <div>
                            <h7 style="color:blue">|</h7>
                        </div>
                        <div class="">
                            <a class="nav-link" asp-area="" asp-controller="Usuarios" asp-action="Login"><h5><b>Entrar</b></h5></a>
                        </div>
                        }
                </div>
                </div>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <hr>
        <div class="container text-center p-0 mb-0">
            Direitos reservados a PUC Minas. COPYRIGHT&copy; 2023 - <a asp-area="" asp-controller="Home" asp-action="Dicas">Dicas</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

