@model Your_Money.Models.Usuario

@{
    var alertClass = ViewBag.AlertClass;
    var alertMessage = ViewBag.AlertMessage;
}

@if (!string.IsNullOrEmpty(alertMessage))
{
    <div class="alert @alertClass">
        @alertMessage
    </div>
}


@{
    ViewData["Title"] = "Details";
}
<link rel="stylesheet" href="~/css/site.css" />
<nav>
    <ol class="breadcrumb p-0 pt-0 pb-3" style="background: white;">
        <li class="breadcrumb-item"><a asp-area="" asp-controller="Usuarios" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Detalhes Usuário</li>
    </ol>
</nav>

<h2 style="color:darkblue">Exibir Usuário</h2>
<hr>
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" Class="btn btn-primary">Editar</a>
    <a asp-action="Index" Class="btn btn-secondary">Voltar</a>
</div>
