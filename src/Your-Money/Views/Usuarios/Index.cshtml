@model IEnumerable<Your_Money.Models.Usuario>

@{
    ViewData["Title"] = "Minha Conta";
}
<nav>
    <ol class="breadcrumb p-0 pt-0 pb-3" style="background: white;">
        <li class="breadcrumb-item"><a asp-area="" asp-controller="Usuarios" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Minha Conta</li>
    </ol>
</nav>

<h2 style="color:darkblue;">Minha Conta</h2>

<h7 style="color:darkblue;">Saldo: R$ 500,00</h7>


<hr>

<div class="container-fluid p-2 text-center">
    <div class="row">

        <div class="col-3">

            <div class="card align-items-center box-shadow" style="border-end-start-radius:40px;border-end-end-radius:40px;">
                <img src="~/user.png" alt="usuário" width="70%" style="padding-top:10%;">
                <div class="card-body">
                    <p id="NameUser" class="card-text">@User.Identity.Name</p>
                </div>
                ------------------
                @foreach(var item in Model)
                {
                    <div class="p-3 pb-5">
                        <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
                    </div>
                }
            </div>
        </div>
        <div class="col-4 text-center">
            <div class="card box-shadow" style="border-end-start-radius:40px;border-end-end-radius:40px;">
                <div class="card-body" style="background-color:lightgreen;">
                <b style="color:green">Receitas</b>
            </div>
                <div class="pt-5 pb-5" style="color:green">
                    <h1><b>R$ 1.000,00</b></h1>
                    <img onclick="location=HTMLHRElement='Lancamentos/Create'" src="~/revenue.png" width="40%" style="padding-top: 1rem; cursor: pointer;">
                    Add Receita
                </div>
            </div>
        </div>
        <div class="col-4 text-center">
            <div class="card box-shadow" style="border-end-start-radius:40px;border-end-end-radius:40px;">
                <div class="card-body" style="background-color:indianred">
            <b style="color:white">Despesas</b>
                </div>
                <div class="pt-5 pb-5" style="color:darkred">
                    <h1><b>R$ 500,00</b></h1>
                    <img onclick="location=HTMLHRElement='Lancamentos/Create'" src="~/expense.png" width="40%" style="padding-top: 1rem; cursor: pointer;">
                    Add Despesa
                </div>
            </div>
        </div>
    </div>
</div>
<hr>


<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<h2 style="color:darkblue;">Receitas x Despesas</h2>
<div>
<canvas id="grafico1" style="width: 500px;"></canvas>
</div>

<script>
    var dadosGrafico1 = {
        labels: ['Janeiro', 'Fevereiro', 'Março', 'Abril', 'Maio', 'Junho', 'Julho', 'Agosto', 'Setembro', 'Outubro', 'Novembro', 'Dezembro'],
        datasets: [
            {
                label: 'Receitas',
                data: [12, 19, 3, 5, 2, 3],
                borderWidth: 1,
            },
            {
                label: 'Despesa',
                data: [10, 15, 5, 2, 5, 1],
                borderWidth: 1,
            }]
    };
    var opcoes = {
        responsive: true,
        maintainAspectRatio: false,
    };
    var grafico1 = new Chart(document.getElementById("grafico1"), {
        type: "bar",
        data: dadosGrafico1,
        options: opcoes,
    });
</script>



