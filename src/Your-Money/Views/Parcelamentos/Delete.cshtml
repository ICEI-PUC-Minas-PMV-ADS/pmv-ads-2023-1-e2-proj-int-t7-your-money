@model Your_Money.Models.Parcelamento

@{
    ViewData["Title"] = "Delete";
}

<h2 style="color:darkblue">Deletar Parcela</h2>
<hr>

<h3 class="mt-2" style="color:blue">Você tem certeza que deseja excluir esta parcela?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Valor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataPagamento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataPagamento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataVencimento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataVencimento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Status == true)
            {
                <span>Efetivado</span>
            }
            else
            {
                <span>Pendente</span>
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-controller="Lancamentos" class="btn btn-secondary" asp-action="Edit" asp-route-id="@Model.LancamentoId">Voltar</a>
    </form>
</div>