@{
@model Your_Money.Models.Usuario

<h2>Insira o código enviado por e-mail e a sua Nova Senha</h2>

<form method="post" action="/Usuarios/ResetarSenha">
        <div class="form-group">
            <label for="codigo">Código de Recuperação:</label>
            <input type="text" class="form-control" id="codigo" name="codigo" required>
        </div>
        <div class="form-group">
            <label for="novaSenha">Nova Senha:</label>
            <input type="password" class="form-control" id="novaSenha" name="novaSenha" required>
        </div>
        <button type="submit" class="btn btn-primary" action="/Usuarios/SenhaRedefinida">Resetar Senha</button>
</form>
}
